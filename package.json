{
  "name": "geppetto",
  "productName": "Geppetto",
  "description": "Create awesome WebGL Animations.",
  "author": "Matthijs Groen <matthijs.groen@gmail.com>",
  "main": "public/electron.js",
  "version": "1.0.0-beta.0",
  "private": true,
  "homepage": "./",
  "dependencies": {
    "delaunator": "^5.0.0",
    "electron-is-dev": "^1.2.0",
    "geppetto-player": "1.0.0-beta.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.1",
    "styled-components": "^5.2.3",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "electron-dev": "concurrently -s first -k \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "start": "craco start",
    "build": "craco build",
    "lint": "eslint src/**/*.ts{,x}",
    "test": "craco test",
    "preelectron-pack": "yarn build",
    "electron-pack": "electron-builder build --mac --win --linux deb --x64 --arm64 --c.extraMetadata.main=build/electron.js -c.mac.identity=null"
  },
  "build": {
    "appId": "com.example.electron-cra",
    "files": [
      "build/**/*",
      "build/icon.png",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "mac": {
      "category": "public.app-category.graphics-design",
      "icon": "build/icon.icns"
    },
    "linux": {
      "category": "2DGraphics"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ]
  },
  "browserslist": [
    "chrome 89"
  ],
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.13.12",
    "@craco/craco": "^6.1.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.1",
    "@types/jest": "^26.0.22",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/styled-components": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "concurrently": "^5.3.0",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "prettier": "^2.2.1",
    "wait-on": "^5.2.1"
  }
}
